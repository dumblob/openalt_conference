@[]html {
  background-color: white;
  color: black;
  font-family: "Open Sans", sans-serif;
}
body {
  margin: 0;
  padding: 0;
  text-align: center;
  min-height: 100%;
}
body > * {
  padding-top: 10pt;
  padding-bottom: 42pt;
}
/*
body > *:nth-last-child(3) {
  padding-bottom: 0;
  margin-bottom: 0;
}
*/
@[] +
# the web page consists of horizontal stripes with colors switching
#   in a circular manner
@[]
body > *:nth-child(3) .section {
  color: @[] + schedule_bg + @[];
}
body > *:nth-child(3n+4) {
  background-color: @[] + dark_grey + @[];
  color: white;
}
body > *:nth-child(3n+5) {
  background-color: @[] + schedule_bg + @[];
  /*background-color: #D0D1D1;*/
  color: white;
}
a,
a:link {
  color: @[] + schedule_bg + @[];
  font-weight: bolder;
  text-decoration: none;
}
a:visited {
  color: @[] + schedule_bg_dark + @[];
}
a:hover,
a:active {
  color: red;
  text-decoration: underline;
}
.narrow_paragraph {
  margin-left: auto;
  margin-right: auto;
  max-width: 450pt;
  text-align: justify;
}



#top_stripe_virtual {
  padding: 0;
  margin: 0;
  height: 37pt;
}
#top_stripe {
/*min-height: 37pt;
  height: 37pt; */
  padding: 0;
  margin: 0;
  top: 0;
  position: fixed;
  width: 100%;
}
#top_stripe, #top_stripe * {
  background-color: @[] + dark_grey + @[];
  color: white;
}
