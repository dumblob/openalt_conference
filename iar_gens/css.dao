nav {
  display: inline-block;
}
.segment {
  display: inline-block;
  background-color: blue;
  height: 100%;
  padding-top: 0;
  margin-top: 0;
}
.segment:nth-last-of-type(-n+2) {
  margin-left: 15pt;
  text-align: left;
}
#top_stripe .segment * {
  vertical-align: middle;  /* for img */
  line-height: 37pt;  /* for the rest */
}
/* arbitrary sized icons are evil */
#top_stripe .segment img {
  max-height: 23pt;
}
#top_stripe .segment .ext_link img {
/*  max-height: 15pt; */
  max-height: 17pt;
}
#top_stripe .segment > * {
  display: inline-block;
  margin: 0;
  /*
  padding-top: auto;
  padding-bottom: auto;
  padding-left: auto;
  padding-right: auto;
  */
}
#top_stripe a:link,
#top_stripe a:visited,
#top_stripe a:hover,
#top_stripe a:active {
  text-decoration: none;
  font-weight: 400;
}
#top_stripe .page_link_selected, #top_stripe .page_link_selected img {
  background-color: @[] + middle_red + @[];
}
#top_stripe .page_link {
  margin: 0;
  padding-right: 10pt;
  padding-left: 10pt;
}
#top_stripe .page_link, .lang_link {
  text-transform: uppercase;
  font-size: 12pt;
}
#top_stripe .page_link:hover, #top_stripe .page_link:hover img {
  background-color: @[] + light_red + @[];
}
#top_stripe .ext_link {
  width: 18pt;
  text-align: center;
}
#top_stripe .ext_link:hover, #top_stripe .ext_link:hover img {
  background-color: #3572c2;
}



.urgent {
  color: red;
  font-size: 14pt;
  margin: 4pt auto;
}



#header {
  margin-top: 0pt;
  padding-bottom: 0;
}
#header img {
  width: 170pt;
}
#header > * {
  margin-left: auto;
  margin-right: auto;
}
#header > p:nth-child(2),
#header > p:nth-child(4) {
  font-size: 16pt;
  font-weight: lighter;
  margin-bottom: 0;
}
.time_range_big {
  font-size: 20pt;
  font-weight: bold;
  margin-top: 5pt;
  margin-bottom: 11pt;
}



#main_buttons {
  display: block;
  margin: 0;
  vertical-align: middle;
}
#main_buttons a:nth-child(n) {
  background-color: @[] + light_red + @[];
}
#main_buttons a:nth-child(2n) {
  background-color: @[] + middle_red + @[];
}
#main_buttons a:nth-child(3n) {
  background-color: @[] + dark_red + @[];
}
#main_buttons a,
#main_buttons a:link,
#main_buttons a:visited,
#main_buttons a:hover,
#main_buttons a:active {
  color: white;
  display: inline-block;
  font-weight: 600;
  text-decoration: none;
  font-size: 17pt;
  text-transform: uppercase;
  padding-top: 15pt;
  padding-bottom: 15pt;
  width: 190pt;
  margin: 0 11pt 20pt 0;
}
@media (min-width: 410pt) {
  #main_buttons a:nth-last-of-type(1),
  #main_buttons a:nth-last-of-type(1):link,
  #main_buttons a:nth-last-of-type(1):visited,
  #main_buttons a:nth-last-of-type(1):hover,
  #main_buttons a:nth-last-of-type(1):active {
    margin-right: 0;
  }
}



.feedback_msg {
  font-style: italic;
  text-align: left;
  margin-top: 24pt;
  margin-bottom: 4pt;
  padding-bottom: 0;
}
.feedback_author:before { content: "-- "; }
.feedback_author {
  text-align: left;
  margin-top: 0;
  margin-bottom: 0;
}



.section {
  font-size: 35pt;
  font-weight: normal;
  text-transform: uppercase;
  padding: 35pt 0 0 0;
  margin: 0 0 35pt 0;
}
.event_title {
  margin: 1.25em 0 0 0;
  padding: 0;
  color: black;
  font-weight: 900;
  font-size: 1.5em;
  text-transform: uppercase;
}
.participant_name {
  color: @[] + schedule_bg + @[];
  font-size: 15pt;
  font-weight: 500;
  margin: 1pt 0 0 0;
}
.event_desc {
  font-size: 11pt;
  text-align: center;
  max-width: 450pt;
  margin: 7pt auto 0 auto;
  padding: 0;
  line-height: 17pt;
}
.participation_reqs {
  font-weight: bold;
  margin: 3pt auto 0 auto;
}
.participation_reqs, .event_reqs {
  font-size: 10pt;
}
.event_reqs {
  margin: 2pt auto 0 auto;
}
.event img {
  height: 20pt;
}
.not_clickable {
  pointer-events: none;
  cursor: default;
}



#cfp > div * {
  text-align: justify;
  max-width: 450pt;
}
#previous_runs > p {
  text-align: left;
  max-width: 450pt;
}
#previous_runs {
  margin-bottom: 0;
}
#speakers > div {
  margin-left: auto;
  margin-right: auto;
  margin-top: 42pt;
  margin-bottom: 120pt;
  max-width: 500pt;
  background-color: yellow;
}
.speaker {
  width: 110pt;
  height: 125pt;
  margin: 5pt;
  float: left;
  font-size: 10pt;
}
.speaker img {
  height: 100pt;
  width: 100pt;
}
.clear_float {
  clear: left;
}



#schedule > p {
  text-transform: uppercase;
  font-size: 18pt;
  font-weight: lighter;
}
#schedule table {
  border-collapse: collapse;
  margin-left: auto;
  margin-right: auto;
  width: 75%;
}
#schedule img {
  vertical-align: middle;
}
#schedule table td img:nth-child(n) {
  margin-right: 10pt;
}
#schedule table td img:nth-child(2n) {
  margin-left: 10pt;
}
#schedule > table tr:last-child > td {
  border-bottom: 2px solid white;
}
#schedule > table tr > td:first-child {
  width: 30%;
}
.with_border_top {
  border-top: 2px solid white;
  padding-top: 17pt;
}
#schedule table strong {
  text-transform: uppercase;
}
#schedule td {
  border-right: 2px solid white;
  border-left: 2px solid white;
  padding-bottom: 17pt;
  padding-right: 17pt;
  padding-left: 17pt;
  text-align: left;
}



#venue a:hover, #feedback a:hover {
  color: @[] + dark_red + @[];
}
#venue a:link, #feedback a:link {
  font-weight: bolder;
}
#venue {
  padding: 0;
  margin: 0;
}
#venue > p {
  text-transform: uppercase;
  font-weight: 300;
  font-size: 12.4pt;
  line-height: 20pt;
}
#map_div {
  width: 100%;
  height: 280px;
  overflow: hidden;
  position: relative;
  margin: 0 auto;
}
#map_div > img {
  min-width: 100%;
  width: 1862px;
  padding: 0;
  margin: 20pt 0 0 0;
  vertical-align: middle;
  position: absolute;
  transform: translate(-50%, 0);
}



.propagation {
  margin: 14pt auto;
  max-width: 600pt;
}
.img_example {
  height: auto;
  width: auto;
  max-height: 160px;
  max-width: 160px;
  vertical-align: middle;
}



.with_icon {
  display: inline-block;
  line-height: 32px;
  padding-left: 32px;
  background-repeat: no-repeat;
  background-position: left center;
  background-size: contain;
}



#partners * {
  margin: 0 3px;
  padding: 0;
  height: 44px;
}
#partners {
  position: fixed;
  margin: 0;
  padding: 0;
  bottom: 0;
  width: 100%;
  border-top: solid @[] + dark_red + @[] 2pt;
  vertical-align: middle;
  text-align: center;
  background: none repeat scroll 0 0 white;
}



#footer {
  margin: 0 0 46px 0;  /* 44px +2*3px -2px */
  padding: 0;
}
#footer > * {
  margin: 0;
  padding: 5pt !important;
}
#footer * {
  background-color: @[] + dark_grey + @[];
  color: white;
  text-transform: uppercase;
  font-size: 6pt;
