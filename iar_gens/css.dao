#workshops > div:nth-child(2n) * {
  background-color: @[] + ultra_light_grey + @[];
}
#talks > div, #workshops > div {
  padding: 35pt 0;
}
#talks     > div:first-child,
#workshops > div:first-child {
  padding-top: 0;
}
#talks     > div:last-child,
#workshops > div:last-child {
  padding-bottom: 0;
}
@[] + #{ circle #} @[]
.circle {
  position: absolute;
  width: 18pt;
  height: 18pt;
  border-radius: 50%;
  background-color: green !important;
}
.track > h4 {
  color: green;
  font-size: 18pt;
  margin: 0 0 5pt 35pt;
  line-height: 18pt;
}
.track > p {
  font-size: 13pt;
  margin: 0 0 5pt 35pt;
}



#previous_runs img {
  width: 100pt;
  max-height: 35pt;
